import numpy as np
arr1=np.array([1,2,3,4])
arr1<3
het=np.random.randint(10,60,size=(10,3))
het+=100
het



hee=np.random.randint(10,60,5)  #不设计size 默认是1行
hee
hee[0]  #单个索引
hee[[0,2,3]]   #多个索引
hee[2:4:2]   #开始，终止，步长  左开右闭


arr1=np.random.randint(0,100,size=(5,5))
arr1
arr1[2,2]   #二维数组取
arr1[2,[2,3]]  #第二行，第二列，第三列的
arr1[[1,2],[2,3]]   #只是对应点的关系，无法切片      想要取2，3行和3,4列的数据需要切片与索引一起用
arr1[[1,2],2:4]      #左闭右开  冒号左边是起点，右边是终点，然后是步长
